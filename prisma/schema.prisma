generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())

  workflows Workflow[]
  apiKeys   ApiKey[]
}

model Workflow {
  id          String   @id @default(cuid())
  title       String
  description String
  tags        String[]
  features    String[] // technicalFeatures
  useCases    String[]
  process     String[] // processSteps
  json        Json     // The actual N8N JSON
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}

model ApiKey {
  id        String   @id @default(cuid())
  provider  String   // "openai", "gemini", "anthropic"
  key       String   // Encrypted Content
  iv        String   // Initialization Vector (Hex)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@unique([userId, provider])
}
